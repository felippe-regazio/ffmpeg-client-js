{
  "name": "ffmpeg-wasm-client",
  "version": "1.0.0",
  "description": "FFMPEG client for front end video processing",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean; babel src -d dist; npm run uglify; npm run dist-wasm",
    "uglify": "for f in $(find ./dist -type f -name '*.js');do uglifyjs --compress --mangle -o \"$f\" -- \"$f\";done",
    "dist-wasm": "cp -n ./src/ffmpeg-worker/ffmpeg-wasm.js ./dist/ffmpeg-worker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felippe-regazio/ffmpeg-wasm-client.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/felippe-regazio/ffmpeg-wasm-client/issues"
  },
  "homepage": "https://github.com/felippe-regazio/ffmpeg-wasm-client#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "uglify-js": "^3.12.0"
  }
}
